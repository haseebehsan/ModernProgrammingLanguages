<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.assignment01.assignment01.MainActivity">
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:ems="10"

            android:hint="Enter Twitter Seach Query Here"
            android:id="@+id/editText"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="215dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint=" Tag Your Query"
            android:id="@+id/editText2"
            />
        <Button
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:text="Save"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="297dp"
        android:layout_weight="0.18">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFB300"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Tagged Searches"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="338dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">
                    <Button
                        android:text="AndroidFp"
                        android:layout_width="230dp"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="230dp"
                        android:text="deitel"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="230dp"
                        android:text="google"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="230dp"
                        android:text="iphonefp"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="230dp"
                        android:text="javafp"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="230dp"
                        android:text="javahtp"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="230dp"
                        android:text="javafx"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="230dp"
                        android:text="javaoracle"
                        android:layout_height="50dp" />




                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="77dp"
                        android:text="Edit"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="77dp"
                        android:text="Edit"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="77dp"
                        android:text="Edit"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="77dp"
                        android:text="Edit"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="77dp"
                        android:text="Edit"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="77dp"
                        android:text="Edit"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="77dp"
                        android:text="Edit"
                        android:layout_height="50dp" />
                    <Button
                        android:layout_width="77dp"
                        android:text="Edit"
                        android:layout_height="50dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Clear Tags"
        android:layout_marginTop="10dp"/>

</LinearLayout>
